<Button>
    font_size: 32
    size_hint: (0.3,0.3)

<MyLayout>
    FloatLayout:
        size: root.width, root.height

        Button:
            text: "Top Left"
            # {x,y,top-where the top will be,bottom,left,right}
            pos_hint: {"x":0,"top":1}
        Button:
            text: "Top Right"
            pos_hint: {"x":0.7,"top":1}
        Button:
            text: "Center"
            pos_hint: {"x":0.35,"y":0.35}
        Button:
            text: "Buttom Left"
            pos_hint: {"x":0,"bottom":1}
        Button:
            text: "Buttom Right"
            pos_hint: {"x":0.7,"bottom":1}