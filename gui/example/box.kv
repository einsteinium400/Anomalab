<Button>
    font_size: 32

<TextInput>
    background_color: (0.6,0.2,0.6,1)

<MyLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding:10
        spacing:10

        Image:
            source: '../images/logo.jpg'
            #allow_stretch: True
            #keep_ratio: True
        Label:
            text: "Name"
            id: name_label
            background_color: (0,0,1,1)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
            color: (0,1,0,1)
            bold: True
            italic: True
            outline_color: (0,0,0)
            outline_width: 3
            
        TextInput:
            id: name_input
            multiline: False

        Label:
            id: pass_label
            text: "Password"
            background_color: (0,0,1,1)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
            color: (0,1,0,1)

        TextInput:
            id: pass_input
            multiline: False


        Button:
            text: "Submit"
            backgroud_normal: ''
            background_color: (0,1,0,1)
            on_press: root.press()