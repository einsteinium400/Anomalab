<Button>
    font_size: 32

<TextInput>
    background_color: (0.6,0.2,0.6,1)

<MyLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding:10
        spacing:10
        Label:
            text: "Name"
            background_color: (0,0,1,1)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
            color: (0,1,0,1)
            bold: True
            italic: True
            outline_color: (0,0,0)
            outline_width: 3
            
        TextInput:
            multiline: False

        Label:
            text: "Password"

        TextInput:
            multiline: False


        Button:
            text: "Submit"
            backgroud_normal: ''
            background_color: (0,1,0,1)