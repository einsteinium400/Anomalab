#:kivy 2.1
#:import Factory kivy.factory.Factory
# ---1---
<Login>:
    name: "login"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: [10,50,10,50]
        spacing: 50
        Image:
            source: app.icon
        MDLabel:
            id: header
            text: "LOGIN"
            font_size: 40
            halign: 'center'
            padding_y: 15
        MDTextField:
            id: user_name
            mode: "round"
            hint_text: "username"
            icon_right: "account"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
        MDTextField:
            id: user_pass
            mode: "round"
            hint_text: "password"
            icon_right: "eye-off"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
            password: True
        MDRoundFlatButton:
            text: "LOGIN"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_release: root.do_login(user_name.text, user_pass.text)
