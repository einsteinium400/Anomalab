        Footer:
            id: footer_place
            FooterButton:
                id: apply_button
                text: "Apply"
                pos_hint: {"x":0.25, "top": 0.6}
                on_press: root.on_choose(spinner_id.text)
            FooterButton:
                id: back_button
                text: "Back"
                pos_hint: {"x":0.55, "top": 0.6}
                on_press: root.on_back()
